<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:fillViewport="true"
        android:layout_alignParentStart="true">

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


        <Button android:id="@+id/buttonScan"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Scanner"
            android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/thumb"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="170dp"
                android:contentDescription="@string/thumb" />


            <EditText
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ffa13143" />

            <EditText
                android:id="@+id/book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff592d94" />


            <EditText
                android:id="@+id/book_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff000000"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/ajouter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ajouter"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/buttonScan"
                android:layout_alignStart="@+id/buttonScan"
                android:layout_marginBottom="50dp"/>

       </LinearLayout>


    </ScrollView>
</RelativeLayout>

